NAME	=	ft_advanced_do-op

FLAGS	=	-Wall -Wextra -Werror -o

SRCS	=	srcs/ft_advanced_do-op.c srcs/operators.c srcs/utils.c

all: $(NAME)

$(NAME):
	gcc $(FLAGS) $(NAME) $(SRCS)

clean:
	rm -f $(NAME)
